<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--        ボトムシートのチップスタイル-->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>  <!-- 背景色(チェック状態により変化)　-->
        <item name="android:textColor">@color/chip_text_color</item>  <!-- 文字色(チェック状態により変化)　-->
        <item name="checkedIconTint">@color/chip_text_color</item>    <!-- チェックされたチップ色(チェック状態により変化) -->
    </style>

    <!-- DetailActivityのスタイル-->
    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">  <!-- アクションバーは無効 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <!-- タブのレイアウトスタイル　-->
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <!-- タブのテキストのスタイル-->
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>